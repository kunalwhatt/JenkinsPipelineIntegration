pipeline {
    agent any

    environment {
        VENV = "venv"
    }

    stages {
        stage('Clone GitHub Repo') {
            steps {
                git branch: 'main', credentialsId: 'github-http', url: 'https://github.com/kunalwhatt/JenkinsPipelineIntegration.git'
            }
        }

        stage('Set Up Python Virtual Environment') {
            steps {
                bat '"/opt/anaconda3/bin" -m venv'
                bat '.\\venv\\Scripts\\python.exe -m pip install --upgrade pip'
                bat '.\\venv\\Scripts\\pip install pandas flask numpy tensorflow.txt'
            }
        }

        stage('Run Flask App') {
            steps {
                bat '.\\venv\\Scripts\\python app.py'
            }
        }
    }
}
